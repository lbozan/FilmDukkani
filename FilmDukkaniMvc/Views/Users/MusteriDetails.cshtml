            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DigerBilgiler.PostaKod)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DigerBilgiler.PostaKod)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DigerBilgiler.Ilceler.Iller.IlAdi)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DigerBilgiler.Ilceler.Iller.IlAdi)
