    <fieldset>
        <legend>Paket </legend>
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayName("İstenilen Filmler")
            </dt>

            <dd>
                @Html.ActionLink("Göster", "MusteriFilmListesi", new { Id = Model.ID, durum = false })
            </dd>
            <dt>
                @Html.DisplayName("Gönderilen Filmler")
            </dt>

            <dd>
                @Html.ActionLink("Göster", "MusteriFilmListesi", new { Id = Model.ID, durum = true })
            </dd>
            <dt><br /> </dt>
            <dd></dd>
            @if (User.IsInRole("Personel"))
            {
                <dt>
                    @Html.DisplayName("Toplam Kesilen Para")
                </dt>

                <dd>
                    @if (Model.AylikParaKesimRelation.Count > 0)
                    {
                        @Html.DisplayFor(model => model.AylikParaKesimRelation.Sum(x => x.KesilenPara)) <span>TL.</span>
                    }
                    else
                    {
                        <span style="color:red">0 TL.</span>
                    }
                </dd>
            }
            <dt>
                @Html.DisplayNameFor(model => model.Paketler.PaketAdi)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Paketler.PaketAdi)
