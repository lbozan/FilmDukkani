@model FilmDukkaniMvc.Musteriler

@{
    ViewBag.Title = "Musteri Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Style{
    @System.Web.Optimization.Styles.Render("~/Content/bootstrap")
}
<div>
    <fieldset>
        <legend>Giriş Bilgiler</legend>

        <dl class="dl-horizontal">
            @if (HttpContext.Current.User.IsInRole("Admin"))
            {
                <dt>
                    @Html.DisplayName("Kullanırlık Durumu ")
                </dt>

                <dd>
                    @if (Model.Users.Aktifmi == true)
                    {
                        <span style="color:green">Aktif - </span>  @Html.ActionLink("DeAktif", "MusteriAktif", new { Id = Model.UserID, durum = false })
                    }
                    else
                    {
                        <span style="color:red">Pasif - </span> @Html.ActionLink("DeAktif", "MusteriAktif", new { Id = Model.UserID, durum = true })
                    }
                </dd>
            }
            <dt>
                @Html.DisplayNameFor(model => model.Users.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Users.UserName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Users.Password)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Users.Password)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DigerBilgiler.Eposta)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DigerBilgiler.Eposta)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DigerBilgiler.TelefonNo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DigerBilgiler.TelefonNo)
            </dd>

        </dl>
    </fieldset>
    <fieldset>
        <legend>Diğer Bilgiler</legend>
        <dl class="dl-horizontal">

            <dt>
