<p>
    @Html.ActionLink("Güncelle", "MusteriDuzenle", new { Id = Model.ID }, new { @class = "duzenle" }) <br /><br />

    @if (HttpContext.Current.User.IsInRole("Personel"))
    {
        @Html.ActionLink("Geri Dön", "MusteriListesi")
    }

</p>
