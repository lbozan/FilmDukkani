@model IEnumerable<FilmDukkaniMvc.BozukFilms>

@{
    ViewBag.Title = "Bozuk Film Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<p>
    <img src="@Url.Content("~/Content/images/Duzen.png")" alt="Düzenle" width="17" height="17" /> @Html.ActionLink("Bozuk Film Ekle", "BozukFilmEkle")
</p>
<table>
    <tbody>
        <tr>

            <th>
                @Html.DisplayName("Film Adı")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Films.FilmAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarih)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aciklama)
                </td>
                <td>
                    @Html.ActionLink("Sil", "BozukFilmSil", new { Id = item.ID }, new { @class = "sil" })
                </td>
            </tr>
        }
    </tbody>
</table>
