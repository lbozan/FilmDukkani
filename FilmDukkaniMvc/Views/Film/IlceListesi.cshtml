@model IEnumerable<FilmDukkaniMvc.Ilceler>

@{
    ViewBag.Title = @ViewBag.ilAdi + " Ilce Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <img src="@Url.Content("~/Content/images/Duzen.png")" alt="Düzenle" width="17" height="17" /> @Html.ActionLink("İlce Ekle", "IlceEkle", new { IlId = @ViewBag.IlId })
</p><br />
<table>
    <tbody>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IlceAdi)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IlceAdi)
                </td>
                <td>
                    @Html.ActionLink("Duzenle", "IlceDuzenle", new { id = item.ID }, new { @class = "duzenle" }) |
                    @Html.ActionLink("Sil", "IlceSil", new { id = item.ID, Name = item.IlceAdi, IlId = item.IlID }, new { @class = "sil" })
                </td>
            </tr>
        }
    </tbody>
</table>
