@model IEnumerable<FilmDukkaniMvc.Oduls>

@{
    ViewBag.Title = "Ödül Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<p>
    <img src="@Url.Content("~/Content/images/Duzen.png")" alt="Düzenle" width="17" height="17" />  @Html.ActionLink("Ödül Ekle", "OdulEkle")
</p>
<table>
    <tbody>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OdulAdi)
            </th>
            <th>
                Ödül Alan Film Sayısı
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td align="left">
                    @Html.DisplayFor(modelItem => item.OdulAdi)
                </td>
                <td align="left">
                    @item.FilmOdulRelation.Count()
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "OdulDuzenle", new { Id = item.ID }, new {   @class="duzenle"}) |
                    @Html.ActionLink("Sil", "OdulSil", new { Id = item.ID }, new { @class = "sil" })
                </td>
            </tr>
        }

    </tbody>
</table>
