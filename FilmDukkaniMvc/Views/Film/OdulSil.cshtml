@model FilmDukkaniMvc.Oduls

@{
    ViewBag.Title = "Ödül Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@Html.DisplayFor(model => model.OdulAdi) Ödülü silmek istediğinizden Eminmisiniz.?</h3>
<div>
    <hr />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="(Evet) Sil" class="btn btn-default sil" /> <br />
            @Html.ActionLink("Geri Dön", "OdulListesi")
        </div>
    }
</div>
