@using System.Web.Optimization
@model FilmDukkaniMvc.Iller

@{
    ViewBag.Title = "İl Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Style{
    @Styles.Render("~/Content/bootstrap")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)
        <div class="form-group">
            @Html.LabelFor(model => model.IlAdi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IlAdi)
                @Html.ValidationMessageFor(model => model.IlAdi)
            </div>
        </div>

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guncelle" class="btn btn-default duzenle"  />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "IlListesi")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
