@using System.Web.Optimization
@model FilmDukkaniMvc.Oduls

@{
    ViewBag.Title = "Ödül Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Style{
    @Styles.Render("~/Content/bootstrap")
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.OdulAdi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OdulAdi)
                @Html.ValidationMessageFor(model => model.OdulAdi)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default ekle" />
            </div>
        </div>
    </div>
}
<br />
<div>
    @Html.ActionLink("Geri Dön", "OdulListesi")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
