@model IEnumerable<FilmDukkaniMvc.Oyuncular>
@using System.Web.Optimization
@{
    ViewBag.Title = "Filme Oyuncu Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Style{
    @System.Web.Optimization.Styles.Render("~/Content/bootstrap")
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <input type="hidden" value="@ViewBag.filmId" name="filmId" />
        <div class="form-group">
            @Html.ValidationMessage("Onay", new { @class = "color:green !implement" })<br /><br />
            @Html.Label("Oyuncular", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="oyuncuId" style="width:300px">
                    <option value="">Kategori Seçin..</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.ID">@item.Adi - @item.Soyadi</option>
                    }
                </select>

                @Html.ValidationMessage("Hata")
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Başrol", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="radio" name="brol" value="Basrol" /> Başrol -
                <input type="radio" name="brol" value="BasrolDegil" checked /> Başrol Değil
                
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-default ekle" />
            </div>
        </div>
    </div>
}
<br /><br />
<div>
    @Html.ActionLink("Geri Dön", "FilmDetails", new { Id = @ViewBag.filmId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
